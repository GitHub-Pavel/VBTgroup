extends common/layout-grey

block content
    include includes/site-banner-sect
    include includes/breadcrumbs-history

    // home-catalog 
    section.site-section.home-catalog
        h2.text--center ЗАПЧАСТИ ДЛЯ ХОЛОДИЛЬНИКОВ
        .container
            .row.home-catalog__row
                - for(let i=0; i<8;i++)
                    .col.col-6.col-lg-3.home-catalog__catalog-item
                        .category-item
                            a(href="#").category-item__image
                                img(data-src="img/category-item.jpg" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt="category-item").b-lazy
                            h4.category-item__title 
                                a(href="#") Измерительное оборудование
                            p.text.category-item__text.d-none.d-md-block Ремонт и заправка любого холодильника или кондиционера требует высокой точности измерения норм заправки фреона, температуры или ражимов работы.
        .catalog-loadmore.home-catalog__catalog-loadmore
            button.btn-loadmore
                span.btn-loadmore__text ПОКАЗАТЬ ЕЩЁ
                svg.btn-loadmore__icon
                    use(href="img/icons.svg#align-down")
    // home-catalog 

    include includes/footer-article