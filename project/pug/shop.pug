extends common/layout-grey

block content
    include includes/site-banner-sect
    include includes/breadcrumbs-history

    // home-catalog 
    section.site-section.home-catalog
        .container
            h2 Дверные полки для холодильников
            .catalog-loadmore.catalog-loadmore--sm_full.mb-30
            .row.align-items-center
                .col.col-6.col-md-4.col-xl-3
                    button.filter-btn
                        span.filter-btn__icons
                            svg.filter-btn__icon.filter-btn__icon--filter
                                use(href="img/icons.svg#filter")
                            svg.filter-btn__icon.filter-btn__icon--times
                                use(href="img/icons.svg#times")
                        h4.filter-btn__text Фильтр
                .col.col-6.col-md-4.d-flex.justify-content-end.justify-content-md-center.justify-content-xl-start
                    .sort
                        p.text.sort__text.d-none.d-xl-block Сортировка:
                        label.select.sort__box
                            select(name="sort").select__input.sort__select
                                option(value="a-z") по назвванию (а-я)
                                option(value="a-z") по назвванию (а-я)
                                option(value="a-z") по назвванию (а-я)
                                option(value="a-z") по назвванию (а-я)
                            svg.select__icon
                                use(href="img/icons.svg#triangle-down")
                .col.col-6.col-md-4.col-xl-5.d-none.d-md-flex.justify-content-end
                    .sort-view
                        label.sort-view__radio
                            input(type="radio" name="sort-view" value="default" checked).sort-view__input.visually-hidden
                            svg.sort-view__icon
                                use(href="img/icons.svg#product-square")
                        label.sort-view__radio
                            input(type="radio" name="sort-view" value="list").sort-view__input.visually-hidden
                            svg.sort-view__icon
                                use(href="img/icons.svg#product-list")
                    .sort-quantity
                        p.text.sort-quantity__description.d-none.d-lg-block Показать:
                        label.sort-quantity__radio
                            input(type="radio" name="sort-quantity" value="12" checked).sort-quantity__input.visually-hidden
                            span.sort-quantity__text 12
                        label.sort-quantity__radio
                            input(type="radio" name="sort-quantity" value="24").sort-quantity__input.visually-hidden
                            span.sort-quantity__text 24
                        label.sort-quantity__radio
                            input(type="radio" name="sort-quantity" value="12").sort-quantity__input.visually-hidden
                            span.sort-quantity__text 36
            .d-block.d-md-none.mb-15
            .row
                .col.col-12.col-xl-3.d-flex.flex-direction-column
                    .catalog-loadmore.mb-15.mt-30.d-none.d-md-block
                    form.filter.home-catalog__filter
                        button.filter__btn-wrapper.filter__btn-wrapper--active.btn-open
                            h5 Производитель
                            svg
                                use(href="img/icons.svg#triangle-down")
                        .wrapper-open.filter__wrapper
                            label.check.filter__input
                                input(type="checkbox" name="manufacturer" value="whirlpool" checked).visually-hidden.check__input
                                .check__box
                                    svg.check__checked-icon
                                        use(href="img/icons.svg#done")
                                p.check__text.text
                                    span.text Whirlpool 
                                    span.text.text--grey_light 12
                            label.check.filter__input
                                input(type="checkbox" name="manufacturer" value="whirlpool").visually-hidden.check__input
                                .check__box
                                    svg.check__checked-icon
                                        use(href="img/icons.svg#done")
                                p.check__text.text
                                    span.text Whirlpool 
                                    span.text.text--grey_light 12
                        button.filter__btn-wrapper.btn-open
                            h5 Производитель
                            svg
                                use(href="img/icons.svg#triangle-down")
                        .wrapper-open
                            .filter__wrapper
                                label.check.filter__input
                                    input(type="checkbox" name="manufacturer" value="whirlpool").visually-hidden.check__input
                                    .check__box
                                        svg.check__checked-icon
                                            use(href="img/icons.svg#done")
                                    p.check__text.text
                                        span.text Whirlpool 
                                        span.text.text--grey_light 12
                                label.check.filter__input
                                    input(type="checkbox" name="manufacturer" value="whirlpool").visually-hidden.check__input
                                    .check__box
                                        svg.check__checked-icon
                                            use(href="img/icons.svg#done")
                                    p.check__text.text
                                        span.text Whirlpool 
                                        span.text.text--grey_light 12
                        .catalog-loadmore.mb-15.mt-15
                        label.check.filter__input.mb-15
                            input(type="checkbox" name="nocategories" value="nocategories").visually-hidden.check__input
                            .check__box
                                svg.check__checked-icon
                                    use(href="img/icons.svg#done")
                            p.check__text.text
                                span.text Фильтр без категории 
                                span.text.text--grey_light 12
                        .filter__clean-wrapper
                            a(href="#").filter__clean.btn.btn--size_small.btn--color_white.d-none.d-lg-flex Очистить
                            a(href="#").filter__clean.btn.btn--size_small.d-flex.d-lg-none Показать 123 товара
                .col.col-12.col-xl-9
                    .row.products
                        - for(let i=0; i<11; i++)
                            .col.home-catalog__product
                                include includes/product
                        // product 
                        .col.home-catalog__product
                            .product
                                .product__top
                                    p.text.product__discount Скидка
                                    a(data-fancybox data-type="ajax" data-src="quick-view.html" data-touch="false" href="#" title="Быстрий просмотр Дверная полка для холодильника Bosch").product__view.product-view.d-none.d-xl-flex
                                        svg.product-view__icon
                                            use(href="img/icons.svg#eye")
                                    a(href="product.html").product__image-wrapper
                                        img(data-src="img/card-product.jpg" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt="product").b-lazy.product__image
                                h5.product__title 
                                    a(href="product.html").product__link.effect.effect--orange
                                        span.effect__item Дверная полка для холодильника Bosch
                                p.text.text--grey.product__vendor
                                    | Артикул: 
                                    span 1234567
                                p.text.text--grey.product__manufacturer 
                                    | Производитель: 
                                    a(href="#").product__link.text.effect.effect--orange 
                                        span.effect__item BOSCH
                                p.text.product__description Lorem ipsum dolor sit amet, cum percipit expetenda te, an sed elitr ludus...
                                .product__bottom
                                    p.text.text--grey.product__price.product__price--old
                                        span 15 000
                                        svg
                                            use(href="img/icons.svg#ruble")
                                    p.text.product__price
                                        span 10 000
                                        svg
                                            use(href="img/icons.svg#ruble")
                                    .product__plus-minus
                                        .plus-minus
                                            button(type="button" data-quantity="minus" data-field="quantity").plus-minus__button.plus-minus__button--inactive.plus-minus__button--minus -
                                            input(type="text" name="quantity" value="1").plus-minus__field.input-number
                                            button(type="button" data-quantity="plus" data-field="quantity").plus-minus__button.plus-minus__button--plus +
                                    .product__btn-wrapper
                                        a(data-fancybox href="#status").product__btn.btn.btn--size_small.btn--color_blue
                                            span.btn__text Под заказ
                        // product 
                    .catalog-loadmore.catalog-loadmore--mt_small
                        button.btn-loadmore
                            span.btn-loadmore__text ПОКАЗАТЬ ЕЩЁ
                            svg.btn-loadmore__icon
                                use(href="img/icons.svg#align-down")
                    // pagination 
                    .pagination.mt-30.home-catalog__pagination
                        .pagination-box.pagination__left
                            a(href="#").pagination-button.pagination-button--prev.effect.effect--orange
                                svg.text.pagination-button__icon.effect__item
                                    use(href="img/icons.svg#pagination-left")
                                span.pagination-button__text.effect__item.d-none.d-md-block Предыдущая
                            a(href="#").pagination__link.pagination__link--active 1
                            a(href="#").pagination__link 2
                            a(href="#").pagination__link 3
                            p.text.pagination__separator ...
                            a(href="#").pagination__link 10
                            a(href="#").pagination-button.pagination-button--next.effect.effect--orange
                                span.text.pagination-button__text.effect__item.d-none.d-md-block Следующая
                                svg.pagination-button__icon.effect__item
                                    use(href="img/icons.svg#pagination-right")
                        p.text.pagination__right
                            span.text--grey_light Показано:
                            span 12 из 1500
                    // pagination 
            .catalog-loadmore.home-catalog__catalog-loadmore.d-none.d-md-block
    // home-catalog 

    include includes/footer-article